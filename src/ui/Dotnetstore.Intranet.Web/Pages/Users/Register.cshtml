@page
@model Dotnetstore.Intranet.Web.Pages.Users.Register

@{
    ViewData["Title"] = Localizer["Register"];
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>@Localizer["Register"]</h1>
        
<h4>@Localizer["RegisterNewAccount"]</h4>
<p>@Localizer["RegisterInformation"]</p>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-page-handler="OnPostAsync">
            <div class="form-group">
                <label asp-for="RegisterModel.LastName" class="control-label">@Localizer["LastName"] *</label>
                <input asp-for="RegisterModel.LastName" class="form-control" data-testid="input_user_register_lastname" autofocus="autofocus" />
                <span asp-validation-for="RegisterModel.LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RegisterModel.FirstName" class="control-label">@Localizer["FirstName"] *</label>
                <input asp-for="RegisterModel.FirstName" class="form-control" data-testid="input_user_register_firstname" />
                <span asp-validation-for="RegisterModel.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RegisterModel.MiddleName" class="control-label">@Localizer["MiddleName"]</label>
                <input asp-for="RegisterModel.MiddleName" class="form-control" data-testid="input_user_register_middlename" />
                <span asp-validation-for="RegisterModel.MiddleName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RegisterModel.DateOfBirth" class="control-label">@Localizer["DateOfBirth"] *</label>
                <input asp-for="RegisterModel.DateOfBirth" class="form-control" type="date" data-testid="input_user_register_dateofbirth" contenteditable="true" />
                <span asp-validation-for="RegisterModel.DateOfBirth" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="RegisterModel.IsMale" data-testid="checkbox_user_register_ismale" /> @Localizer["IsMale"]
                </label>
            </div>
            <div class="form-group">
                <label asp-for="RegisterModel.SocialSecurityNumber" class="control-label">@Localizer["SocialSecurityNumber"]</label>
                <input asp-for="RegisterModel.SocialSecurityNumber" class="form-control" data-testid="input_user_register_socialsecuritynumber" />
                <span asp-validation-for="RegisterModel.SocialSecurityNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RegisterModel.EmailAddress" class="control-label">@Localizer["EmailAddress"] *</label>
                <input asp-for="RegisterModel.EmailAddress" class="form-control" data-testid="input_user_register_emailaddress" />
                <span asp-validation-for="RegisterModel.EmailAddress" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RegisterModel.Password" class="control-label">@Localizer["Password"] *</label>
                <input asp-for="RegisterModel.Password" type="password" class="form-control" data-testid="input_user_register_password" />
                <span asp-validation-for="RegisterModel.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RegisterModel.ConfirmPassword" class="control-label">@Localizer["ConfirmPassword"] *</label>
                <input asp-for="RegisterModel.ConfirmPassword" type="password" class="form-control" data-testid="input_user_register_confirmpassword" />
                <span asp-validation-for="RegisterModel.ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="@Localizer["Save"]" class="btn btn-primary" data-testid="submit_user_register_save" />
            </div>
        </form>
    </div>
    <div class="col-md-4">
        <div asp-validation-summary="All" class="text-danger" data-testid="validation_summary_user_register"></div>
        <h4>@Localizer["AlreadyHaveAnAccount"]</h4>
        <p>@Localizer["LoginToYourAccount"]</p>
        <a asp-page="Login" class="btn btn-secondary" data-testid="link_user_register_login">@Localizer["Login"]</a>
    </div>
</div>

<div>
    <a asp-page="/Index" data-testid="link_user_register_index">@Localizer["BackToStart"]</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}